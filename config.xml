<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.gavrilenkogeorgi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sharlushka</name>
    <icon platform="android" src="res/icon/android/icon-144-xxhdpi.png" />
    <description>
        Simple puzzle game.
    </description>
    <author email="gavrilenko.georgi@gmail.com" href="http://gavrilenkogeorgi.github.io">
        Gavrilenko Georgi
    </author>
    <content src="dist/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.1.1" />
</widget>
